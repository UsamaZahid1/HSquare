<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginTop="20dp"

    android:orientation="vertical"
    app:cardElevation="15dp">

    <RelativeLayout
        android:id="@+id/first_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/iv_productListItem_productimg"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="5dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_productListItem_productname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_productListItem_productimg"
            android:gravity="center"
            android:text="Product Name"
            android:textColor="@color/grey"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_productListItem_productprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_productListItem_productname"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Product Price"
            android:layout_marginTop="3dp"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>