<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sewing"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:src="@drawable/logo" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_main_join"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="15dp"
        app:icon="@drawable/register"
        app:iconGravity="start"
        android:layout_marginTop="80dp"
        app:iconSize="40dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:textSize="18sp"
        android:textAllCaps="false"
        app:backgroundTint="#363637"
        app:cornerRadius="23dp"
        app:iconTint="@null"
        android:text="Join Now" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_main_quickshop"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:textSize="18sp"
        android:textAllCaps="false"
        app:backgroundTint="#5AD8EE"
        app:cornerRadius="23dp"
        app:icon="@drawable/time"
        app:iconGravity="start"
        app:iconTint="@null"
        android:text="Quick Shop" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_main_googlesign"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:textAllCaps="false"
        app:backgroundTint="#699BF2"
        app:iconSize="40dp"
        app:cornerRadius="23dp"
        android:textSize="18sp"
        app:icon="@drawable/google"
        app:iconGravity="start"
        app:iconTint="@null"
        android:text="Google Sign In"
         />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_main_already"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textAllCaps="false"
        app:backgroundTint="#363637"
        app:icon="@drawable/login"
        app:iconGravity="start"
        app:cornerRadius="23dp"
        app:iconTint="@null"
        android:text="Already a Member?Login" />

</LinearLayout>