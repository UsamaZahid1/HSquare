<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"

    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="280dp"
        android:layout_gravity="center"
        android:layout_height="260dp"
        android:src="@drawable/logo" />

    <Button
        android:id="@+id/btn_main_join"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/buttons_white"
        android:elevation="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Join Now"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <View
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@color/lgrey" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/grey"
            android:text="or"
            android:textSize="22sp" />

        <View
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:background="@color/lgrey" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_main_quickshop"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/buttons_white"
        android:textColor="@color/black"
        android:elevation="10dp"

        android:gravity="center"
        android:padding="10dp"
        android:text="Quick Shop"
        android:textAllCaps="false"

        android:textSize="18sp"
        app:iconTint="@null" />


    <Button
        android:id="@+id/btn_main_already"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/buttons_white"

        android:gravity="center"
        android:padding="10dp"
        android:text="Already a Member?"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <View
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:background="@color/lgrey" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_googlesignin"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:src="@drawable/google" />

        <ImageView
            android:id="@+id/iv_fbsignin"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/facebook" />

        <!--        <com.facebook.login.widget.LoginButton-->
        <!--            android:id="@+id/btn_fblogin"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginLeft="20dp" />-->
    </LinearLayout>

</LinearLayout>